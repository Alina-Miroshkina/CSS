body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 20px;
    background-color: #f4f4f4;
}

.container {
    max-width: 800px;
    margin: auto;
    background: #fff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.font-settings {
    font-family: 'Times New Roman', serif;
    font-size: 20px;
    font-weight: bold;
}

.font-style {
    font-style: italic;
}

.line-height {
    line-height: 2.5;
}

.letter-spacing {
    letter-spacing: 3px;
}

.monospace {
    font-family: monospace;
}

.text-align {
    text-align: right;
}

.text-decoration {
    text-decoration: line-through;
    text-decoration: overline;
    text-decoration: underline;
}

.text-transform {
    text-transform: uppercase;
}

.list-style ul {
    list-style-type: square;
}
