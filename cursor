cursor: auto;          /* Автовыбор (по умолчанию) */
cursor: default;       /* Стандартная стрелка */
cursor: pointer;       /* Указатель (ссылка) */
cursor: text;          /* Текстовый курсор (I-образный) */
cursor: move;          /* Перемещение (крестик со стрелками) */
cursor: wait;          /* Ожидание (часы/кружок) */
cursor: help;          /* Помощь (стрелка с вопросом) */
cursor: not-allowed;   /* Действие запрещено (перечёркнутый круг) */
cursor: progress;      /* Процесс выполняется (стрелка + кружок) */
cursor: crosshair;     /* Крестик (например, для выделения) */
cursor: grab;          /* Захват (рука с открытой ладонью) */
cursor: grabbing;      /* Захвачено (рука с закрытой ладонью) */
cursor: zoom-in;       /* Увеличение (лупа с "+") */
cursor: zoom-out;      /* Уменьшение (лупа с "-") */
cursor: none;          /* Скрыть курсор */
--------------------------------------------------
2. Кастомные курсоры
Можно загрузить свою картинку:
cursor: url('путь/к/изображению.png'), auto;
**************************************************
3. Курсоры для элементов интерфейса

cursor: cell;          /* Выделение ячейки таблицы */
cursor: col-resize;    /* Изменение ширины колонки */
cursor: row-resize;    /* Изменение высоты строки */
cursor: n-resize;      /* Изменение размера (север, вверх) */
cursor: e-resize;      /* Изменение размера (восток, вправо) */
cursor: s-resize;      /* Изменение размера (юг, вниз) */
cursor: w-resize;      /* Изменение размера (запад, влево) */
cursor: nesw-resize;   /* Двойное изменение (северо-восток ↔ юго-запад) */
cursor: nwse-resize;   /* Двойное изменение (северо-запад ↔ юго-восток) */
